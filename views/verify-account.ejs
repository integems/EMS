<meta name="ac:route" content="/verify-account">

<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow" style="width: 100%; max-width: 400px;">
            <!-- Logo Section -->
            <div class="text-center mb-4">
                <img alt="INTEGEMS Logo" class="img-fluid" style="max-width: 150px;" dmx-bind:src="sc_security_app_data.data.query.where(`field_name`, 'logo', '==')[0].field_value">
                <div class="card-header fs-3">EMS Account</div>
            </div>
            <!-- Login Form -->
            <form>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter your password" required="" data-rule-nowhitespace="" minlength="8" data-msg-minlength="Please enter at least eight (8) characters.">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm your password" required="" data-rule-equalto="password">
                    <input id="hash" name="verify" type="text" class="form-control">
                    <input id="firstname" name="firstname" type="text" class="form-control">
                </div>
                <button type="submit" class="btn w-100 btn-primary">Activate Account</button>
            </form>
            <!-- Footer Section -->
            <div class="mt-3 text-center">
                <!-- <p class="mb-0">Don't have an account? <a href="#">Sign up</a></p> -->
                <small class="text-center text-muted mb-0">
                    &copy; <span id="currentYear"></span> Environmental Monitoring System.
                    Developed with care by
                    <a href="https://www.integemsgroup.com" class="text-decoration-none">INTEGEMS</a>.
                </small>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>